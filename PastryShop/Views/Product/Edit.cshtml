@model Product

@{
    ViewData["Title"] = "Edit";
}

<div >
    <h1>Edit</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
@using (Html.BeginForm("Edit", "Product"))
{ 
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Category.Id" />
                <input type="hidden" asp-for="Category.Description" />
                <label asp-for="Category.Name" class="control-label">Category Name</label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="SellingDate" />
                @if (@Model.Ingredients != null && Model.Ingredients.Count > 0)
                {
                    <label asp-for="Ingredients" class="control-label"></label>

                    @for (int i = 0; i < Model.Ingredients.Count; i++)
                    {
                        @Html.HiddenFor(m => @Model.Ingredients[i].Id)
                        @Html.HiddenFor(m => @Model.Ingredients[i].Quantity)
                        @Html.HiddenFor(m => @Model.Ingredients[i].UO_Measure)
                        @Html.HiddenFor(m => @Model.Ingredients[i].ProductID)
                        @Html.TextBoxFor(m => @Model.Ingredients[i].Description)
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
}
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>

</div>
